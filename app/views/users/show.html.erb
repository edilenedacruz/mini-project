<h1>Welcome, <%= @user.first_name %>!</h1>

<% if current_user.role == 1 %>
  <%= link_to "Create a Category", new_admin_category_path %><br>
  <%= link_to "View all Categories", admin_categories_path %><br>
  <%= link_to "Create a Gif", new_admin_gif_path %><br>
  <%= link_to "View all Gifs", admin_gifs_path %><br>
<% else %>
  <%= link_to "Add more gifs to your favorite list ", gifs_path %><br>
  <%= link_to "Display your favorite gifs", favorite_gifs_path %><br>
<% end %>

<br>
<%= button_to "Logout", logout_path, method: :delete, class: "button" %>
